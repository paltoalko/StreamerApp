{
  "compilerOptions": {
    "baseUrl": "src",
    "jsx": "react",
    "module": "commonjs",
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "noEmit": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true,
    "lib": ["es2017", "dom"],
    "types": ["node", "jest", "@testing-library/jest-dom"]
  },
  "include": ["src", "src/index.tsx"]
}
